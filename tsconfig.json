{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "types": ["node"],

        "outDir": "dist",
        "rootDir": "src",

        "strict": true,
        "skipLibCheck": true,

        "verbatimModuleSyntax": false,
        "exactOptionalPropertyTypes": false
    },
    "include": ["src/**/*.ts"]
}
